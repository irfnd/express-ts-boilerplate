{
	"compilerOptions": {
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"module": "commonjs",
		"outDir": "dist",
		"removeComments": true,
		"resolveJsonModule": true,
		"rootDir": "src",
		"baseUrl": "src",
		"paths": { "@/*": ["*"] },
		"skipLibCheck": true,
		"strict": true,
		"target": "ES2022"
	},
	"ts-node": { "require": ["tsconfig-paths/register"] }
}
