{
	"compilerOptions": {
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"module": "commonjs",
		"outDir": "dist",
		"removeComments": true,
		"resolveJsonModule": true,
		"rootDir": "src",
		"baseUrl": "src",
		"paths": { "@/*": ["*"] },
		"skipLibCheck": true,
		"strict": true,
		"target": "ES2022"
	},
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules"]
}
